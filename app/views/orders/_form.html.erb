<h2>Complete your order</h2>
<h4>Where shall we send products for you?</h4>

<%= nested_form_for current_order, url: complete_order_path(current_order.id), method: 'PUT' do |f| %>
	<%= f.hidden_field :total_price, value: current_order.total_price %>
	<%= f.hidden_field :order_status, value: "completed" %>
	<%= f.fields_for :user, User.new do |u| %>
		<div class="row col-1-1 order-form">
			<%= u.label :email, class: 'col-1-2' %>
			<%= u.text_field :email, class: 'col-1-2 user-input' %>

			<%= u.label :street, class: "col-1-2" %>
			<%= u.text_field :street, class: "col-1-2 user-input" %>

			<%= u.label :building_nr, class: "col-1-2" %>
			<%= u.text_field :building_nr, class: "col-1-2 user-input" %>

			<%= u.label :post_code, class: "col-1-2" %>
			<%= u.text_field :post_code, class: "col-1-2 user-input" %>

			<%= u.label :city, class: "col-1-2" %>
			<%= u.text_field :city, class: "col-1-2 user-input" %>
		</div>
	<% end %>
	<div class="row col-1-1 submit-order">
		<%= f.submit "Save" %>
	</div>
<% end %>
