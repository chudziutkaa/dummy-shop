<div class="row">
  <div class="col-2-3 product-details">
      <h3><b><%= @product.name %></b></h3>
      <h4>Price: <%= number_to_currency @product.price %></h4>
      <%= form_for @order_product, remote: true do |f| %>
        <i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i>
        <%= f.number_field :quantity, value: 1,  min: 1, class: 'quantity-input' %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.submit "Add to Cart", class: 'submit-btn' %>
      <% end %>
      <p class="product-description"><%= @product.description %></p>
  </div>
  <div class="col-1-3">
    <img style="width: 100%;" src="http://www.freeiconspng.com/uploads/photo-video-slr-camera-icon-512x512-pixel-12.png">
  </div>
</div>
<div class="row">
  <h3 class="col-1-1">What customers say about <%= @product.name %>?</h3>
  <div class="col-2-3">
    <%= render 'comments/form', product: @product, comment: @comment, parent: nil %>
  </div>
  <div class="col-1-3"></div>
  <div class="col-2-3 comments-content">
    <%= render 'comments/index' %>
  </div>
</div>
